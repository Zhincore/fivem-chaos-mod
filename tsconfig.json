{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "$client/*": ["client/*"],
      "$server/*": ["server/*"],
      "$common/*": ["common/*"]
    },
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "strict": true,
    "alwaysStrict": true,
    "module": "commonjs",
    "target": "es2021",
    "lib": ["es2021"],
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "noEmit": true
  }
}
